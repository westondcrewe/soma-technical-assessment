generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  createdAt DateTime  @default(now())
  dueDate   DateTime?
  imageURL  String?

  @@index([dueDate, createdAt]) // fast sorting on ItemList using index
}